<Window x:Name="window" x:Class="ShortcutLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Shortcut Launcher" Height="350" Width="525" Loaded="window_Loaded">
    <Grid>
        <ListBox x:Name="shortcutsListBox" Margin="10,10,10,40" MouseDoubleClick="shortcutsListBox_MouseDoubleClick"/>
        <Button x:Name="saveButton" Content="Save" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" Height="23" Click="saveButton_Click"/>

    </Grid>
</Window>
